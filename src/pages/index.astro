    <body>
        <h1>Radoslav Pavlinchov Portfolio</h1>
        <div id="container">
            <div id="dot"></div>
        </div>

        <script>
            import { gsap } from "gsap"

            const dot = document.getElementById("dot")
            const container = document.getElementById("container")

            let velocityX = 5
            let velocityY = 4

            function getRandomColor() {
                return "#" + Math.floor(Math.random() * 16777215).toString(16)
            }

            function checkBoundsAndReverse() {
                const dotRect = dot.getBoundingClientRect()
                const containerRect = container.getBoundingClientRect()

                if (
                    dotRect.left <= containerRect.left ||
                    dotRect.right >= containerRect.right
                ) {
                    velocityX = -velocityX
                    gsap.to(dot, {
                        backgroundColor: getRandomColor(),
                        duration: 0.2,
                    })
                }
                if (
                    dotRect.top <= containerRect.top ||
                    dotRect.bottom >= containerRect.bottom
                ) {
                    velocityY = -velocityY
                    gsap.to(dot, {
                        backgroundColor: getRandomColor(),
                        duration: 0.2,
                    })
                }
            }

            function moveDot() {
                gsap.to(dot, {
                    x: "+=" + velocityX,
                    y: "+=" + velocityY,
                    duration: 0.01,
                    ease: "none",
                    onUpdate: checkBoundsAndReverse,
                    onComplete: moveDot,
                })
            }

            moveDot()
        </script>
    </body>
