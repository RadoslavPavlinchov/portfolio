        <script>
            import { gsap } from "gsap"

            const dot = document.getElementById("dot")
            const container = document.getElementById("container")

            if (!dot || !container) {
                throw new Error("Dot or container not found")
            }

            let velocityX = 5
            let velocityY = 4

            function getRandomColor() {
                return "#" + Math.floor(Math.random() * 16777215).toString(16)
            }

            function checkBoundsAndReverse(
                dot: HTMLElement,
                container: HTMLElement
            ) {
                if (!dot || !container) {
                    return
                }

                const dotRect = dot.getBoundingClientRect()
                const containerRect = container.getBoundingClientRect()

                if (
                    dotRect.left <= containerRect.left ||
                    dotRect.right >= containerRect.right
                ) {
                    velocityX = -velocityX
                    gsap.to(dot, {
                        backgroundColor: getRandomColor(),
                        duration: 0.2,
                    })
                }
                if (
                    dotRect.top <= containerRect.top ||
                    dotRect.bottom >= containerRect.bottom
                ) {
                    velocityY = -velocityY
                    gsap.to(dot, {
                        backgroundColor: getRandomColor(),
                        duration: 0.2,
                    })
                }
            }

            function moveDot(dot: HTMLElement) {
                if (!dot || !container) {
                    return
                }

                gsap.to(dot, {
                    x: "+=" + velocityX,
                    y: "+=" + velocityY,
                    duration: 0.01,
                    ease: "none",
                    onUpdate: checkBoundsAndReverse,
                    onUpdateParams: [dot, container],
                    onComplete: moveDot,
                    onCompleteParams: [dot],
                })
            }

